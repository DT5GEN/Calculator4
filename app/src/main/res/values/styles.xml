<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_buttons_digit">
        <item name="android:state_pressed">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:shadowColor">#525252</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="style_buttons_functions">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:textColor">#4100F3</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:shadowColor">#525252</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="style_button_result">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_background_result_pressed</item>
        <item name="android:shadowColor">#525252</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_complete_operation_display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">30dp</item>
        <item name="android:textColor">@color/color_complete_operation</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:scaleY">1.6</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="style_display_operations_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:textColor">@color/color_lcd_display</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:scaleY">1.6</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">12</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="style_display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_lcd_display</item>
        <item name="android:layout_marginHorizontal">@dimen/display_text_view_horizontal_margin</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:scaleY">1.4</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

</resources>